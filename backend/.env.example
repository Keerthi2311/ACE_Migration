# Application Settings
APP_NAME=IBM ACE Migration Estimator
APP_VERSION=1.0.0
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
FRONTEND_URL=http://localhost:5173

# Database - PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=ace_estimator
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# Vector Database - Qdrant
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=historical_projects

# Redis Cache
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
CACHE_TTL=3600

# LLM Configuration - OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=2000

# LLM Configuration - IBM watsonx.ai (Optional)
WATSONX_API_KEY=
WATSONX_PROJECT_ID=
WATSONX_URL=https://us-south.ml.cloud.ibm.com
WATSONX_MODEL=ibm/granite-13b-chat-v2

# LLM Provider Selection (openai or watsonx)
LLM_PROVIDER=openai

# Security
SECRET_KEY=change_this_to_a_random_secret_key_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# RAG Configuration
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536
VECTOR_SEARCH_TOP_K=10
VECTOR_SEARCH_SCORE_THRESHOLD=0.7

# Estimation Configuration
CONFIDENCE_THRESHOLD_HIGH=0.8
CONFIDENCE_THRESHOLD_MEDIUM=0.6
MANUAL_REVIEW_PERCENTAGE=0.2
MAX_ESTIMATE_ADJUSTMENT=0.2

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
